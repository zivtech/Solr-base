#!/bin/bash

if [ ! $1 ] ; then
  echo "Please specify a name for this instance."
  exit
fi

if [ ! -d /opt/solr/solr-$1 ] ; then
  echo "That solr instance does not exist."
  exit
fi
sudo /etc/init.d/tomcat6 stop
sudo rm -r /opt/solr/solr-$1
sudo rm "/etc/tomcat6/Catalina/localhost/solr-$1.xml"
sudo rm -rf "/var/lib/tomcat6/webapps/solr-$1"
sudo /etc/init.d/tomcat6 start
